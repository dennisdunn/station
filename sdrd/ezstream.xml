<?xml version="1.0" encoding="UTF-8"?>
<ezstream>
    <servers>
        <server>
            <hostname>icecast</hostname>
            <password>source</password>
        </server>
    </servers>
    <streams>
        <stream>
        <stream_name>SDR Receiver</stream_name>
            <mountpoint>/receiver.ogg</mountpoint>
            <format>Ogg</format>
            <encoder>Opus-VBR96</encoder>
        </stream>
    </streams>
    <encoders>
        <encoder>
            <name>Opus-VBR96</name>
            <format>Ogg</format>
            <program>opusenc --vbr --raw --raw-rate 32000 --raw-chan 1 - -</program>
        </encoder>
    </encoders>
    <intakes>
        <intake>
            <type>stdin</type>
        </intake>
    </intakes>
</ezstream>
